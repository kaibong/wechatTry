/* components/x-segmentBar/x-segmentBar.wxss */
.segmentBar {
  width: 100%;
  height: 100rpx;
  /* background-color: orange; */
  display: flex;
  border-bottom: 1px solid #ccc;
}
.segmentBarItem {
  flex: 1;
  /* border: 1px solid red; */
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.segmentBarItem .title {
  font-size: 30rpx;
  color: #666;
}
.segmentBarItem .subTitle {
  font-size: 26rpx;
  color: #999;
}
.active .title{
  color:  rgb(99, 204, 245) !important;
}
.active .subTitle{
  color:  rgb(99, 204, 245) !important;
}