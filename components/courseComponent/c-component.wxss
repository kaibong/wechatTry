/* components/courseComponent/c-component.wxss */
.courseItem{
  height: 100px;
  border-bottom: 5px solid red;
  display: flex;
}
.courseItem .fm{
  width: 140px;
  height: 80px;
  background-color: orange;
  margin: 10px;
  margin-right: 0;
}

.courseItem .fm image{
  width: 100%;
  height: 100%;
}
.courseItem .desc{
  flex: 1;
  padding: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.courseItem .desc text{
  font-size: 13px;
}
.courseItem .desc .courseTitle{
  font-size: 14px;
  font-weight: bold;
}
.courseItem .desc .courseTeacher{
  color: gray;
}
.courseItem .desc .courseStuCount{
  color: red;
}